
<script >
	import ControlPanel from '$lib/components/ControlPanel.svelte';
    const arrayItems=['1','2','3',"C",'4','5','6',"+",'7','8','9',"-"]
    let primer='';
    let primerPartly=" ";
    let op1=0;
    let op2 = 0; 
    let znak='';
    let res='';
    
    /**
	 * @param {string} btnRes
	 */
    function OptClick(btnRes){
        switch(btnRes)
        {
        case 'C':
            primer='';
            res='';
            break
        case '+':
        case '-':
            op1 =Number(primerPartly);
            primer+=btnRes;
            primerPartly=" ";

            znak = btnRes;
            
            break;
        case '=':
            op2 = Number(primerPartly);
            primer+='='
            $:res= result(op1,op2,znak);
            break;
        case '0':
        case '1':
        case '2':
        case '3':
        case '4':
        case '5':
        case '6':
        case '7':
        case '8':
        case '9':
            primer+=btnRes;
            primerPartly+=btnRes;
            break;

        
        }
        
    
    }
    let a;
    let b;
    let c;
    function result(a,b,c){
        switch(c){
            case '+':
                return a+b;
                break
            default:
                return a-b;
                break;
        }

    }
    

    $:res;
    $:primer;

</script>

 


<!-- <InfoPanel></InfoPanel> -->

<div class='infopanel'>
    <div class="infoline">{primer}{res}</div>
</div>

<div class="container">

    {#each arrayItems as arrayItem }
        <button class="btn" on:click={()=> {OptClick(arrayItem)}}>
            {arrayItem}
        </button>
    {/each}

    <button class="btn0" on:click={()=> {OptClick("0")}}>0</button>
    <button class="btn2" on:click={()=> {OptClick("=")}}>=</button>

</div>


